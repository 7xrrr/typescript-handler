  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "NodeNext",                              
    "outDir": "./dist/",                                  
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                     
